---
import { Briefcase, Database, BarChart3, Settings } from 'lucide-astro';
---

<section id="skills" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
        Technical Skills
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        A comprehensive skill set spanning business operations, data management, and emerging technologies
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Business Applications -->
      <div class="animate-on-scroll">
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900/50 rounded-xl mb-6 mx-auto">
            <Briefcase class="w-8 h-8 text-blue-600" />
          </div>
          <h3 class="text-xl font-bold text-center mb-4 text-gray-900 dark:text-white">Business Tools</h3>
          <div class="space-y-3">
            <div class="skill-item">
              <span class="skill-name">Microsoft Excel</span>
              <div class="skill-bar">
                <div class="skill-progress w-[90%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Microsoft Outlook</span>
              <div class="skill-bar">
                <div class="skill-progress w-[85%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Tally ERP</span>
              <div class="skill-bar">
                <div class="skill-progress w-[80%]"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Database & Analytics -->
      <div class="animate-on-scroll">
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="flex items-center justify-center w-16 h-16 bg-green-100 dark:bg-green-900/50 rounded-xl mb-6 mx-auto">
            <Database class="w-8 h-8 text-green-600" />
          </div>
          <h3 class="text-xl font-bold text-center mb-4 text-gray-900 dark:text-white">Data Management</h3>
          <div class="space-y-3">
            <div class="skill-item">
              <span class="skill-name">MySQL</span>
              <div class="skill-bar">
                <div class="skill-progress w-[75%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Data Analysis</span>
              <div class="skill-bar">
                <div class="skill-progress w-[70%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Reporting</span>
              <div class="skill-bar">
                <div class="skill-progress w-[85%]"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Research & Development -->
      <div class="animate-on-scroll">
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="flex items-center justify-center w-16 h-16 bg-purple-100 dark:bg-purple-900/50 rounded-xl mb-6 mx-auto">
            <BarChart3 class="w-8 h-8 text-purple-600" />
          </div>
          <h3 class="text-xl font-bold text-center mb-4 text-gray-900 dark:text-white">Research & Analysis</h3>
          <div class="space-y-3">
            <div class="skill-item">
              <span class="skill-name">Research & Development</span>
              <div class="skill-bar">
                <div class="skill-progress w-[90%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Market Analysis</span>
              <div class="skill-bar">
                <div class="skill-progress w-[80%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Documentation</span>
              <div class="skill-bar">
                <div class="skill-progress w-[85%]"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Operations Management -->
      <div class="animate-on-scroll">
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="flex items-center justify-center w-16 h-16 bg-orange-100 dark:bg-orange-900/50 rounded-xl mb-6 mx-auto">
            <Settings class="w-8 h-8 text-orange-600" />
          </div>
          <h3 class="text-xl font-bold text-center mb-4 text-gray-900 dark:text-white">Operations</h3>
          <div class="space-y-3">
            <div class="skill-item">
              <span class="skill-name">Operations Management</span>
              <div class="skill-bar">
                <div class="skill-progress w-[88%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Process Optimization</span>
              <div class="skill-bar">
                <div class="skill-progress w-[82%]"></div>
              </div>
            </div>
            <div class="skill-item">
              <span class="skill-name">Team Leadership</span>
              <div class="skill-bar">
                <div class="skill-progress w-[85%]"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Soft Skills -->
    <div class="mt-16 animate-on-scroll">
      <h3 class="text-2xl font-bold text-center mb-8 text-gray-900 dark:text-white">Core Competencies</h3>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl p-6 text-white text-center">
          <h4 class="text-xl font-bold mb-2">Leadership</h4>
          <p class="text-primary-100">Proven team leadership and mentoring capabilities</p>
        </div>
        <div class="bg-gradient-to-r from-secondary-500 to-primary-500 rounded-2xl p-6 text-white text-center">
          <h4 class="text-xl font-bold mb-2">Problem Solving</h4>
          <p class="text-primary-100">Analytical thinking and innovative solution development</p>
        </div>
        <div class="bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl p-6 text-white text-center">
          <h4 class="text-xl font-bold mb-2">Communication</h4>
          <p class="text-primary-100">Excellent verbal and written communication skills</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-item {
    @apply space-y-2;
  }
  
  .skill-name {
    @apply text-sm font-medium text-gray-700 dark:text-gray-300;
  }
  
  .skill-bar {
    @apply w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2;
  }
  
  .skill-progress {
    @apply h-full bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full transition-all duration-1000 ease-out;
  }
</style>